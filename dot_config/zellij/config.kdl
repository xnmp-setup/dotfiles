keybinds {
  // Give Ctrl-q back to apps like micro
  unbind "Ctrl q"
  unbind "Ctrl s"
  
  shared {
    bind "Super+'" { MoveFocus "Right"; }
    bind "Super+l" { MoveFocus "Left"; }
    bind "Super+p" { MoveFocus "Up"; }
    bind "Super+;" { MoveFocus "Down"; }
  }

  normal {
    // Alt+p enters Pane mode
    // bind "Alt p" { SwitchToMode "Pane"; }
    unbind "Ctrl s"
  }

    shared_except "locked" {
        unbind "Alt f"
    }

  pane {
    // In Pane mode, pl;' moves between panes
    // (then return to Normal so you can keep typing)
    bind "w" { CloseFocus; }

    bind "p" { MoveFocus "Up"; }
    bind "l" { MoveFocus "Left"; }
    bind ";" { MoveFocus "Down"; }
    bind "'" { MoveFocus "Right"; }

    bind "Alt p" { NewPane "Up"; }
    bind "Alt l" { NewPane "Left"; }
    bind "Alt ;" { NewPane "Down"; }
    bind "Alt '" { NewPane "Right"; }

    // Optional: zoom toggle while you're here
    bind "o" { ToggleFocusFullscreen; }

    // Exit Pane mode without doing anything
    bind "Esc" { SwitchToMode "Normal"; }
  }

  // Make Ctrl-b q quit (tmux-style chord)
  tmux {
    bind "q" { Quit; }
  }
}
