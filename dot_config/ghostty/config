# Quick terminal: top + centered, 60% tall, 75% wide
quick-terminal-position = top
quick-terminal-size = 65%,1000px

background-opacity = 0.95
macos-hidden = always
macos-titlebar-style = tabs

macos-window-buttons = hidden
split-divider-color = #FFBF00
font-thicken = true
font-thicken-strength = 80
theme = Vercel
mouse-scroll-multiplier = 1

window-padding-x = 10
# window-padding-y = 10

keybind = global:F10=toggle_quick_terminal
keybind = ctrl+shift+,=reload_config
keybind = ctrl+shift+c=write_screen_file:paste

keybind = ctrl+t=new_tab
keybind = ctrl+w=close_surface
keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab
keybind = ctrl+v=paste_from_clipboard
keybind = shift+insert=paste_from_clipboard
keybind = performable:ctrl+c=copy_to_clipboard
keybind = ctrl+shift+p=toggle_command_palette
keybind = alt+backspace=text:\x1b\x7f

# Super (Win key) + key  -> send Alt+key (encoded as ESC + key)
keybind = super+l=esc:l
keybind = super+p=esc:p
keybind = super+;=esc:;
keybind = super+'=esc:'

# ctrl+delete
keybind = alt+delete=text:\x1bd
keybind = shift+,=open_config
keybind = ctrl+shift+k=text:\x0b

# pane navigation
keybind = alt+super+'=new_split:right
keybind = alt+super+l=new_split:left
keybind = alt+super+p=new_split:up
keybind = alt+super+;=new_split:down
keybind = alt+o=toggle_split_zoom
keybind = alt+'=goto_split:right
keybind = alt+l=goto_split:left
keybind = alt+p=goto_split:up
keybind = alt+;=goto_split:down
keybind = ctrl+shift+t=undo
keybind = ctrl+backspace=text:\x17
keybind = shift+home=text:\x1b[1;2H
keybind = shift+end=text:\x1b[1;2F

font-size = 15

